		this.tempoOrdineComp = tempoOrdineComp;
	}


	public LocalDateTime getTempoReal() {
		return tempoReal;
	}


	public void setTempoReal(LocalDateTime tempoReal) {
		this.tempoReal = tempoReal;
	}


	public double getCostoReal() {
		return costoReal;
	}


		this.costoReal = costoReal;
	}
	
	
	
}
